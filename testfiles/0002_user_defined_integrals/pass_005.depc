typedef signed_8_t = signed 8 bit integer;
typedef signed_16_t = signed 16 bit integer;
typedef signed_32_t = signed 32 bit integer;
typedef signed_64_t = signed 64 bit integer;

typedef unsigned_8_t = unsigned 8 bit integer;
typedef unsigned_16_t = unsigned 16 bit integer;
typedef unsigned_32_t = unsigned 32 bit integer;
typedef unsigned_64_t = unsigned 64 bit integer;

func min_signed_8() -> signed_8_t { return -128; }
func min_signed_16() -> signed_16_t { return -32768; }
func min_signed_32() -> signed_32_t { return -2147483648; }
func min_signed_64() -> signed_64_t { return -9223372036854775808; }

func max_signed_8() -> signed_8_t { return 127; }
func max_signed_16() -> signed_16_t { return 32767; }
func max_signed_32() -> signed_32_t { return 2147483647; }
func max_signed_64() -> signed_64_t { return 9223372036854775807; }

func max_unsigned_8() -> unsigned_8_t { return 255; }
func max_unsigned_16() -> unsigned_16_t { return 65535; }
func max_unsigned_32() -> unsigned_32_t { return 4294967295; }
func max_unsigned_64() -> unsigned_64_t { return 18446744073709551615; }
